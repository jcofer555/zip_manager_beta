function loadarchiveHistory() {
  fetch("/plugins/zip_manager/helpers/get_archive_history.php")
    .then(res => res.text())
    .then(data => {
      const logBox = document.getElementById("archiveLogBox");
      const placeholder = document.getElementById("archiveLogPlaceholder");
      const clearBtn = document.getElementById("clearArchiveHistoryBtn");
      const trimmed = data.trim();

      const hasRealHistory = trimmed && !/^No archiving history!?$/i.test(trimmed);

      if (hasRealHistory) {
        logBox.innerText = trimmed;
        logBox.style.display = "block";
        placeholder.style.display = "none";
        clearBtn.disabled = false;
        clearBtn.title = "Clear archiving history";
      } else {
        logBox.innerText = "";
        logBox.style.display = "none";
        placeholder.innerText = "No archiving history!";
        placeholder.style.display = "block";
        clearBtn.disabled = true;
        clearBtn.title = "No history to clear";
      }
    })
    .catch(() => {
      const logBox = document.getElementById("archiveLogBox");
      const placeholder = document.getElementById("archiveLogPlaceholder");
      const clearBtn = document.getElementById("clearArchiveHistoryBtn");

      logBox.innerText = "‚ùå Failed to load history.";
      logBox.style.display = "block";
      placeholder.style.display = "none";
      clearBtn.disabled = true;
      clearBtn.title = "No history to clear";
    });
}

